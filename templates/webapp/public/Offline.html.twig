{% extends 'offline-base.html.twig' %}

{% block meta %}
	{{ parent() }}
{% endblock %}

{% block title %}
	{% if parameter is null %}OpenGaia | Hors-ligne
	{% else %}
	{{ parameter.nameSite }} | Hors-ligne{% endif%}
{% endblock %}

{% block header %}{% endblock %}

{% block content %}
<section class="container-fluid">
	<div class="row">
		<div class="col-12">
			<h1 class="text-center">
				{% if parameter is null %}
					OpenGaia
				{% else %}
					{{ parameter.nameSite }}
				{% endif%}
				{% if parameter.logoName is null %}
				{% else %}
					<img class="img-fluid" src="{{ vich_uploader_asset(parameter, 'logoFile') }}" alt="{{ parameter.logoName }}">
				{% endif %}
			</h1>
			<h4></h4>
			<hr>
			<p class="text-center">{{parameter.offlMessage|raw}}</p>

			<h2 class="text-center signature">Blandine & Pauline</h2>
		</div>
	</div>
</section>
{% endblock %}

{% block footer %}{% endblock %}