{% extends 'login.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-4 align-self-center px-lg-6 my-5">
        <!-- Heading -->
        <h2 class="display-4 text-center mb-3">
            Créer votre compte
        </h2>
        <p class="text-center d-lg-none">
            <img class="img-fluid" src="{{ asset('images/png/Logo_jaf.png') }}" alt="justafaire">
        </p>
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <!-- Subheading -->
        <p class="text-muted text-center mb-5">
            Accéder à votre espace personnel.
        </p>
        <!-- Form -->
        {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-12 mb-2">
                <h5>Général</h5>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-3">
                        {{ form_label(registrationForm.username, 'login', {'label_attr': {'class':'form-label'}}) }}
                    </div>
                    <div class="col-9">
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Identifiant'}}) }}
                    </div>
                </div>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-3">
                        {{ form_label(registrationForm.firstName, 'Nom', {'label_attr': {'class':'form-label'}}) }}
                    </div>
                    <div class="col-4">
                        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Prénom'}}) }}
                    </div>
                    <div class="col-5">
                        {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Nom'}}) }}
                    </div>
                </div>
            </div>
            <div class="col-12 mb-2">
                <h5>Coordonnées personnelles</h5>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-3">
                        {{ form_label(registrationForm.adress1, 'Adresse', {'label_attr': {'class':'form-label'}}) }}
                    </div>
                    <div class="col-9">
                        {{ form_widget(registrationForm.adress1, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                    </div>
                </div>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-3">
                    </div>
                    <div class="col-9">
                        {{ form_widget(registrationForm.Adress2, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                    </div>
                </div>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-3">
                    </div>
                    <div class="col-2">
                        {{ form_widget(registrationForm.zipcode, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'CP'}}) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(registrationForm.city, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Commune'}}) }}
                    </div>
                </div>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-3">
                        {{ form_label(registrationForm.phoneDesk, 'Contacts', {'label_attr': {'class':'form-label'}}) }}
                    </div>
                    <div class="col-4">
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" ><i class="bi bi-telephone"></i></span>
                            {{ form_widget(registrationForm.phoneDesk, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" ><i class="bi bi-phone"></i></span>
                            {{ form_widget(registrationForm.phoneGsm, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                </div>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-3">
                        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class':'form-label'}}) }}
                    </div>
                    <div class="col-9">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Email'}}) }}
                    </div>
                </div>
            </div>
            <div class="col-12 mb-2">
                <h5>Votre mot de passe</h5>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-5">
                        {{ form_label(registrationForm.password.first) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control form-control-sm'}} ) }}
                    </div>
                </div>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-5">
                        {{ form_label(registrationForm.password.second) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control form-control-sm'}} ) }}
                    </div>
                </div>
            </div>
        </div>

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">Valider</button>
        {{ form_end(registrationForm) }}

    </div>
    <div class="col-md-6 col-lg-6 col-xl-8 d-none d-lg-block">
        <!-- Image -->
        <div id="block_login_image" class="bg-cover h-100 min-vh-100 mt-n1 mr-n3">

        </div>
    </div>

{% endblock %}
