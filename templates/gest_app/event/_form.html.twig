{{ form_start(form) }}
<div class="card-body">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <button class="nav-link active" aria-current="page" data-bs-toggle="tab" data-bs-target="#Details" type="button" role="tab" aria-controls="Details" aria-selected="true"><h5>Details</h5></button>
        </li>
        <li class="nav-item">
            <button class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Options" type="button" role="tab" aria-controls="Options" aria-selected="true"><h5>Options</h5></button>
        </li>
        <li class="nav-item">
            <button class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Visuel" type="button" role="tab" aria-controls="Visuel" aria-selected="true"><h5>Visuel et réseau</h5></button>
        </li>
        {% if app.request.get('_route') == 'op_gestapp_event_edit'%}
        <li class="nav-item">
            <button class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Galerie" type="button" role="tab" aria-controls="Visuel" aria-selected="true"><h5>Galerie</h5></button>
        </li>
        {% endif %}
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="Details" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="col-6">
                    <h5 class="mt-3">Informations générales</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-2">
                            {{ form_label(form.name, "Titre", {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-4">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>

                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-2">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-10">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-6 ">
                    <h5 class="mt-3">Rendre cet évènement public sur le site</h5>
                    <p>Si vous choisissez de laisser cet élément privé, seuls les membres du réseaux seront informé de son organisation.</p>
                    <fieldset>
                        <div class="form-check form-switch">
                            {{ form_widget(form.isPublish, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.isPublish, "Oui", {'label_attr': {'class':'form-check-label'}}) }}
                        </div>
                    </fieldset>
                    <h5 class="mt-3">Votre Evenèment est ponctuel</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-2">
                            {{ form_label(form.eventAt, "Indiquez la date", {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-3">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text" ><i class="bi bi-calendar-event"></i></span>
                                {{ form_widget(form.eventAt, {'attr': {'class': 'form-control form-control-sm flatpickr', 'placeholder':''}}) }}
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text" ><i class="bi bi-clock"></i></span>
                                {{ form_widget(form.eventtimeAt, {'attr': {'class': 'form-control form-control-sm flatpickrtime', 'placeholder':''}}) }}
                            </div>
                        </div>
                    </div>
                    <h5 class="mt-3">Votre Evenèment est sur plusieurs jours</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text" >Du</span>
                                {{ form_widget(form.eventStartAt, {'attr': {'class': 'form-control form-control-sm flatpickr', 'placeholder':''}}) }}
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text" >Au</span>
                                {{ form_widget(form.eventFinishAt, {'attr': {'class': 'form-control form-control-sm flatpickr', 'placeholder':''}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="Options" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="col-6">
                    <h5 class="mt-3">Indiquez les coordonnées du lieu de l'évènement</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            {{ form_label(form.placeAddress, "Lieu", {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.placeAddress, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.placeComplement, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            {{ form_label(form.placeZipcode, "CP / Ville", {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-2">
                            {{ form_widget(form.placeZipcode, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                        <div class="col-6">
                            {{ form_widget(form.placeCity, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <h5 class="mt-3">Indiquez les contacts pour l'évènement</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            {{ form_label(form.contactEventEmail, "Email", {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.contactEventEmail, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            {{ form_label(form.contactEventPhone, "Telephone", {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.contactEventPhone, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="Visuel" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="col-6">
                    <h5 class="mt-3">Choisissez le visuel de votre évènement</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.visuelFile, "Visuel de l'évènement", {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.visuelFile, {'attr': {'class': 'form-control-file form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <h5 class="mt-3">Indiquez si des pages ont été dédiées à l'évènement</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            {{ form_label(form.urlFacebookEvent, "Lien Facebook", {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.urlFacebookEvent, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            {{ form_label(form.urlInstagramEvent, "Lien Instagram", {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.urlInstagramEvent, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if app.request.get('_route') == 'op_gestapp_event_edit' %}
            <div class="tab-pane" id="Galerie" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="col-2">
                    {{ include('gest_app/event/include/_addeventgal.html.twig') }}
                </div>
                <div class="col-10">
                    {% include 'gest_app/event_gal/showgalbyevent.html.twig' with galeries %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
<div class="card-footer">
    <button class="btn btn-sm btn-primary">{{ button_label|default('Ajouter') }}</button>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}
