{% extends 'admin.html.twig' %}

{% block title %}OpenGaia | Sécurité : réinitialisation du mot de passe{% endblock %}

{% block content %}
    <section class="container">

        <h1 class="mt-3 mb-3">Modifier votre mot de passe</h1>
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <div class="mt-3 mb-3">
            <small>
                Entrer l'adresse mail du membre, un message lui sera envoyé pour réinitialiser son mot de passe.
            </small>
        </div>
        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}


        <button class="btn btn-primary mt-3">Envoyer le mail de réinitialisation</button>
        {{ form_end(requestForm) }}
    </section>
{% endblock %}