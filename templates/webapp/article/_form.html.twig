{{ form_start(form) }}
<div class="card-body">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <button class="nav-link active" aria-current="page" data-bs-toggle="tab" data-bs-target="#Contenu" type="button" role="tab" aria-controls="Contenu" aria-selected="true"><h5>Contenu</h5></button>
        </li>
        <li class="nav-item">
            <button class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Medias" type="button" role="tab" aria-controls="Options" aria-selected="true"><h5>Medias</h5></button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="Contenu" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="col-8">
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.title, 'Titre', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'titre de la page'}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.description, 'Description', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'description'}}) }}
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.content, 'Contenu', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.content, {'attr': {'class': 'form-control form-control-sm', 'rows':'15'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <h5>Paramètre de l'article</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.category, 'Categorie', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.category, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            <b>{{ form_label(form.state, 'Etat', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.state, {'attr': {'class': 'form-select form-select-sm'}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <fieldset>
                            <div class="form-check form-switch">
                                {{ form_widget(form.isReadMore, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isReadMore, 'Afficher "Lire la suite"', {'label_attr': {'class':'form-check-label'}}) }}
                            </div>
                        </fieldset>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <fieldset>
                            <div class="form-check form-switch">
                                {{ form_widget(form.isShowtitle, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isShowtitle, "Afficher le titre de l'article", {'label_attr': {'class':'form-check-label'}}) }}
                            </div>
                        </fieldset>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <fieldset>
                            <div class="form-check form-switch">
                                {{ form_widget(form.isShowdate, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isShowdate, "Afficher la date de création", {'label_attr': {'class':'form-check-label'}}) }}
                            </div>
                        </fieldset>
                    </div>
                    <h5>Bouton</h5>
                    <div class="row mb-1 mt-1 g-1">
                        <fieldset>
                            <div class="form-check form-switch">
                                {{ form_widget(form.isLink, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isLink, "Ajouter un bouton cliquable", {'label_attr': {'class':'form-check-label'}}) }}
                            </div>
                        </fieldset>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-6">
                            <b>{{ form_label(form.linkPage, "Inserer un lien avec l'article", {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-6">
                            {{ form_widget(form.linkPage, {'attr': {'class': 'form-select form-select-sm'}}) }}
                        </div>
                    </div>
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.linktext, 'texte du bouton', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.linktext, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="Medias" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="col-8">
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-3">
                            <b>{{ form_label(form.articleFrontFile, 'Article front file', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-9">
                            {{ form_widget(form.articleFrontFile, {'attr': {'class': 'form-control-file form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            <b>{{ form_label(form.articleFrontPosition, 'Article front position', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-8">
                            {{ form_widget(form.articleFrontPosition, {'attr': {'class': 'form-select form-select-sm'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-footer">
    <a class="btn btn-secondary btn-sm" href="{{ path('op_webapp_article_index') }}"><i class="fas fa-angle-double-left"></i> Retour à la liste</a> <button class="btn btn-sm btn-primary">{{ button_label|default('Enregistrer') }}</button>
</div>

{{ form_end(form) }}
